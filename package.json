{
  "name": "cross-icon-svg",
  "version": "3.3.0",
  "description": "Figma Plugin to create multiple icons from a SVG files.",
  "type": "module",
  "engines": {
    "node": ">=20.6.0"
  },
  "author": {
    "name": "Victor Assis",
    "email": "victorpassis@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npx concurrently --raw \"npm run plugin:dev\" \"npm run ui:dev\"",
    "build": "npm run lint && npm run plugin:build && npm run ui:build",
    "lint": "eslint .",
    "test": "vitest run",
    "plugin:tsc": "npx tsc -p plugin/tsconfig.json",
    "plugin:dev": "npm run esbuild -- watch",
    "plugin:build": "npm run plugin:tsc && npm run esbuild -- build",
    "ui:tsc": "npx tsc -p ui/tsconfig.json",
    "ui:dev": "npm run vite:build -- --watch",
    "ui:build": "npm run vite:build && npm run ui:tsc",
    "esbuild": "dotenv -e .env -- node plugin/esbuild.mjs",
    "vite:build": "vite build --config ui/vite.config.ts"
  },
  "dependencies": {
    "cheerio": "^1.1.0",
    "fast-xml-parser": "^5.2.5",
    "fs-extra": "^11.3.0",
    "js-base64": "^3.7.7",
    "jszip": "^3.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "svg-path-parser": "^1.1.0",
    "svg-path-reverse": "^1.7.0",
    "svgpath": "^2.6.0",
    "svgson": "^5.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@figma/plugin-typings": "^1.110.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/svg-path-parser": "^1.1.6",
    "@types/svg-path-reverse": "^1.7.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@xmldom/xmldom": "^0.9.8",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "globals": "^16.0.0",
    "sass": "^1.87.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vite-plugin-singlefile": "^2.2.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "figma",
    "plugin",
    "figma plugin",
    "eslint",
    "stylelint",
    "prettier"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*": [
      "stylelint --fix",
      "git add"
    ],
    "*.{html,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
